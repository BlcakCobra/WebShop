{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
  "typeRoots": [
  "./node_modules/@types",
  "./Server/types"
  ]
  ,
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "Server/**/*.ts",
    "app/**/*.tsx",
    ".next/types/**/*.ts",
    "test/**/*",
    "Server/**/*.d.ts"
, "app/Components/ProductFullInfo", "app/OwnHooks/useClickOutside.ts"  ],
  "exclude": [
    "node_modules"
  ]
}
